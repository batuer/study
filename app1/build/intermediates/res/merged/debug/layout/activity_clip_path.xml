<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hencoder.hencoderpracticedraw4.ClipPathActivity">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:background="#22000000">

    <com.hencoder.hencoderpracticedraw4.MyIv1
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/iv"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:scaleType="centerCrop"
          android:src="@mipmap/ic_img1" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:background="#fff"
          android:gravity="center_horizontal"
          android:text="标题文字"
          android:textColor="#33000000"
          android:textSize="20sp" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:background="#fff"
          android:gravity="start"
          android:text="万恶的国内设计,都喜欢偏向于ios的扁平化风格，这里涉及到很多原因"
          android:textColor="#88000000"
          android:textSize="16sp" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:background="#282727" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:background="#fff"
          android:gravity="center_horizontal"
          android:text="确定按钮"
          android:textColor="#698"
          android:textSize="20sp" />
    </com.hencoder.hencoderpracticedraw4.MyIv1>
  </FrameLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      android:background="#22000000">

    <!--<com.hencoder.hencoderpracticedraw4.MyIv2-->
    <!--android:layout_width="match_parent"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_margin="10dp"-->
    <!--android:src="@mipmap/ic_img1" />-->
    <com.hencoder.hencoderpracticedraw4.MyOutLine
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#fff" />
  </FrameLayout>
</LinearLayout>
